<div class="pt-3">
  <a href="/users" class="btn btn-primary mb-3"><i class="bi-arrow-left me-2"></i>Back to Users</a>
  <%- include ("../partials/messages") %>
  <form action="/users/create" method="POST">
    <div class="mb-3">
      <%  var error = locals.errors ? errors.find((o) => o.param === 'name') : '' %>
      <label for="name" class="form-label">Name</label>
      <input type="name" class="form-control <%= error ? 'is-invalid' : '' %>" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
      <%- error ? '<div class="invalid-feedback">'+error.msg+'</div>' : '' %>
    </div>
    <div class="mb-3">
      <%  var error = locals.errors ? errors.find((o) => o.param === 'email') : '' %>
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control <%= error ? 'is-invalid' : '' %>" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
      <%- error ? '<div class="invalid-feedback">'+error.msg+'</div>' : '' %>
    </div>
    <div class="mb-3">
      <%  var error = locals.errors ? errors.find((o) => o.param === 'password') : '' %>
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control <%= error ? 'is-invalid' : '' %>" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
      <%- error ? '<div class="invalid-feedback">'+error.msg+'</div>' : '' %>
    </div>
    <button type="submit" class="btn btn-success"><i class="bi-save me-2"></i>Create User</button>
  </form>
</div>

